<!-- views/animals.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>입양 가능한 유기동물</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="p-6 font-sans">
  <header class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">🐶 입양 가능한 동물 목록</h1>
    <nav>
      <a href="/" class="text-blue-500">홈</a>
      <a href="/board" class="ml-4 text-blue-500">게시판</a>
    </nav>
  </header>

  <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    <% animals.forEach(animal => { %>
      <div class="border rounded shadow p-4">
        <img src="<%= animal.image_url %>" alt="<%= animal.name %>" class="w-full h-48 object-cover rounded mb-2">
        <h2 class="text-lg font-semibold mb-1"><%= animal.name %> (<%= animal.breed %>)</h2>
        <p>나이: <%= animal.age %></p>
        <p>성별: <%= animal.gender === 'F' ? '여아' : '남아' %></p>
        <p>보호소: <%= animal.location %></p>
      </div>
    <% }) %>
  </section>
</body>
</html>